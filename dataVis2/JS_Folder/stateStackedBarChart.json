{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Crop and Livestock Values by State in Australia",
  "data": {
    "url": "https://raw.githubusercontent.com/archnj/FIT3179/main/dataVis2/data_folder/Stacked_Bar_Data.csv"
  },
  "params": [
    {
      "name": "highlight",
      "select": {"type": "point", "fields": ["Type"], "on": "mouseover"}
    },
    {
      "name": "select",
      "select": {"type": "point", "fields": ["Type"]}
    }
  ],
  "mark": {
    "type": "bar",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Value (in millions AUD)",
      "stack": "zero"
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "title": "Category",
      "scale": {
        "domain": ["Crop", "Livestock"],
        "range": ["#A8BFA3", "#C2A68A"]
      },
      "legend": {
        "labelFontSize": 13,
        "titleFontSize": 13
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Type", "type": "nominal", "title": "Category"},
      {"field": "Value", "type": "quantitative", "title": "Value (in millions AUD)", "format": ",.0f"}
    ],
    "fillOpacity": {
      "condition": [
        {"param": "select", "value": 1},
        {"param": "highlight", "value": 0.7}
      ],
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {"param": "select", "empty": false, "value": 2},
        {"param": "highlight", "empty": false, "value": 1}
      ],
      "value": 0
    }
  },
  "config": {
    "view": {
      "stroke": null
    }
  }
}