{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Crop and Livestock Values by State",
  "data": {
    "url": "https://raw.githubusercontent.com/archnj/FIT3179/main/dataVis2/data_folder/cropAndLivestock.csv"
  },
  "params": [
    {
      "name": "Type_selection",
      "value": "Livestock",
      "bind": {
        "input": "select",
        "options": [
          "Crop",
          "Livestock"
        ],
        "labels": [
          "Crop",
          "Livestock"
        ],
        "name": "Type Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Type == Type_selection"}
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "labelAngle": 0
      }
    }
  },
  "layer": [
    {
      "encoding": {
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "domain": [
              "Australian Capital Territory",
              "New South Wales",
              "Northern Territory",
              "Queensland",
              "South Australia",
              "Tasmania",
              "Victoria",
              "Western Australia"
            ],
            "range": [
              "#e41a1c",
              "#377eb8",
              "#4daf4a",
              "#984ea3",
              "#ff7f00",
              "#ffff33",
              "#a65628",
              "#f781bf"
            ]
          },
          "legend": {
            "labelFontSize": 12,
            "titleFontSize": 12
          }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Value"
        }
      },
      "layer": [
        {"mark": "line"},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": "point"
        }
      ]
    },
    {
      "transform": [{"pivot": "State", "value": "Value", "groupby": ["Year", "Type"]}],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Type", "type": "nominal"},
          {"field": "Australian Capital Territory", "type": "quantitative", "title": "Australian Capital Territory (Value $m)", "format": ",.0f"},
          {"field": "New South Wales", "type": "quantitative", "title": "New South Wales (Value $m)", "format": ",.0f"},
          {"field": "Northern Territory", "type": "quantitative", "title": "Northern Territory (Value $m)", "format": ",.0f"},
          {"field": "Queensland", "type": "quantitative", "title": "Queensland (Value $m)", "format": ",.0f"},
          {"field": "South Australia", "type": "quantitative", "title": "South Australia (Value $m)", "format": ",.0f"},
          {"field": "Tasmania", "type": "quantitative", "title": "Tasmania (Value $m)", "format": ",.0f"},
          {"field": "Victoria", "type": "quantitative", "title": "Victoria (Value $m)", "format": ",.0f"},
          {"field": "Western Australia", "type": "quantitative", "title": "Western Australia (Value $m)", "format": ",.0f"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 350},
        "y": {"value": 20},
        "text": {"value": "COVID-19 Pandemic"}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"datum": "2020"},
        "color": {"value": "red"},
        "size": {"value": 1},
        "strokeDash": {"value": [4, 4]}
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}